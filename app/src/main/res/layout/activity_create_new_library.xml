<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.CreateNewLibraryActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Library"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose a Photo"
        android:id="@+id/selectPhotoButton"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/placeholderImage"
        android:layout_below="@+id/selectPhotoButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_placeholder"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/charterInput"
        android:hint="Charter#"
        android:gravity="center_horizontal"
        android:layout_below="@+id/placeholderImage"
        android:layout_centerHorizontal="true"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/zipCodeInput"
        android:layout_below="@+id/charterInput"
        android:layout_centerHorizontal="true"
        android:hint="Zip Code"
        android:gravity="center_horizontal"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/latitudeInput"
        android:hint="Latitude e.g. 123.45"
        android:gravity="center_horizontal"
        android:layout_below="@+id/zipCodeInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/longitudeInput"
        android:hint="Longitude e.g. 123.45"
        android:gravity="center_horizontal"
        android:layout_below="@+id/latitudeInput"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Submit"
        android:id="@+id/newLibraryButton"
        android:layout_below="@id/longitudeInput"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
