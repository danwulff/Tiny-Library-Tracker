<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.epicodus.tinylibrarytracker.ui.LoginActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/mainImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiny Library Tracker"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/title"
        android:layout_below="@+id/mainImage"
        android:textSize="40dp"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="4dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:hint="example@google.com"
        android:gravity="center_horizontal"
        android:background="@color/hint_background"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordInput"
        android:layout_below="@+id/emailInput"
        android:layout_centerHorizontal="true"
        android:hint="password"
        android:gravity="center_horizontal"
        android:background="@color/hint_background"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Sign In"
        android:id="@+id/signInButton"
        android:layout_below="@+id/passwordInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not registered? Click here to sign up!"
        android:id="@+id/signUp"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
