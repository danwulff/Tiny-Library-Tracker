<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.tinylibrarytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.tinylibrarytracker.MainActivity">
            </meta-data>
        </activity>
        <activity android:name=".SearchResults">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.tinylibrarytracker.MainActivity">
            </meta-data>
        </activity>
        <activity android:name=".Library">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.tinylibrarytracker.SearchResults">
            </meta-data>
        </activity>
        <activity android:name=".CreateNewLibrary">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.tinylibrarytracker.SearchResults">
            </meta-data>
        </activity>
        <activity android:name=".FavoriteLibraries">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.tinylibrarytracker.MainActivity">
            </meta-data>
        </activity>
    </application>

</manifest>